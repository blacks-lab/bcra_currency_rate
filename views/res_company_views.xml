<odoo>
    <record id="res_company_view_form_bcra" model="ir.ui.view">
        <field name="name">res.company.form.bcra</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="bcra_api_key" password="True"/>
            </xpath>
        </field>
    </record>
</odoo>
